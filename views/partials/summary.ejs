<span><%= data.summary.charAt(0).toUpperCase() + data.summary.slice(1).toLowerCase() %></span>

<% isNoWind = function() {
	if (params.windUnit === 'm/s' && data.windSpeed < 0.894) {
		return true;
	}
	if (params.windUnit === 'km/h' && data.windSpeed < 3.219) {
		return true;
	}
	if (params.windUnit === 'mph' && data.windSpeed < 2) {
		return true;
	}
	return false;
}%>

<% if (Math.abs(data.temperature - data.apparentTemperature) > 3 ) { %>
	<span>
		feels like
		<%= Math.round(data.apparentTemperature) %>Â°
	</span>
<% } %>

<span>with
<% if (isNoWind()) { %>
	no wind
<% } else { %>
	a <%= Math.round(data.windSpeed) %>
		<span><%= params.windUnit %>
		<% if (params.windUnit === 'm/s' && data.windSpeed < 13.9 || (params.windUnit === 'mph' && data.windSpeed < 32) || (params.windUnit === 'km/h' && data.windSpeed < 51.49)) { %>
			breeze
		<% } else if (params.windUnit === 'm/s' && data.windSpeed < 17.2 || (params.windUnit === 'mph' && data.windSpeed < 39) || (params.windUnit === 'km/h' && data.windSpeed < 62.764)) { %>
			wind
		<% } else { %>
			gale
		<% } %>
		</span>
<% } %>
</span>

<% if (data.precipProbability > 5) { %>
	<span><%= Math.round(100 * data.precipProbability) %>% chance of</span>

	<% if (data.precipIntensity > 0) { %>
		<span class="nowrap">
			<% if (data.precipIntensity < 0.002) { %>
				Very light
			<% } else if (data.precipIntensity < 0.017) { %>
				Light
			<% } else if (data.precipIntensity < 0.1) { %>
				Moderate
			<% } else if (data.precipIntensity < 0.4) { %>
				Heavy
			<% } %>

			<%= data.precipType %>.
		</span>
	<% } %>

<% } %>
